extends layout.pug 

block content
        main
          h1=pageTitle 
          form(method="POST", action="/read", enctype="multipart/form-data")
            input(type="file", name="fileName", accept="text/*", required)
            input(type="submit" value="Convert")

          h2 File Lists 
            ul 
              each file in files 
                li 
                  a(href=`/read/${file}`)=file